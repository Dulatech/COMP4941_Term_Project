@model COMP4941_Term_Project.Models.Customer

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Customer</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Branch")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Branch.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name.Title)

            @Html.DisplayFor(model => model.Name.FirstName)
            @Html.DisplayFor(model => model.Name.MiddleName)
            @Html.DisplayFor(model => model.Name.LastName)
        </dd>

        <dt>
            @Html.DisplayName("NickName")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name.NickName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.HomeAddress)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.HomeAddress.Street)
            @Html.DisplayName(",")
            @Html.DisplayFor(model => model.HomeAddress.City)
            @Html.DisplayName(",")
            @Html.DisplayFor(model => model.HomeAddress.Province)
            @Html.DisplayName(",")
            @Html.DisplayFor(model => model.HomeAddress.Country)
            @Html.DisplayName(",")
            @Html.DisplayFor(model => model.HomeAddress.PostalCode)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Picture)
        </dt>

        <dd>
            @{
                var base64 = Convert.ToBase64String(Model.Picture);
                var imgSrc = String.Format("data:image/png;base64,{0}", base64);
            }
            <img src="@imgSrc" width="80" height="80" />
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.ID }) |
    @Html.ActionLink("Back to List", "Index")
</p>
